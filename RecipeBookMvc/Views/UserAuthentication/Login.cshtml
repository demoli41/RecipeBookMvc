
@model RecipeBookMvc.Models.DTO.LoginModel
@{
}

<form class="w-40">
    <h2 class="pb-10">Додати страву</h2>
    <div class="input-container">
        <label for="DishName" class="w-40">Назва страви</label>
        <input type="text" class="input">
    </div>
    <div class="message-box pd-x-28 error">
        Необхіна назва страви
    </div>


    <div class="input-container">
        <label for="Category" class="w-40">Категорія</label>
        <select class="input">
            <option value="">--select--</option>
            <option value="1">Десерт</option>
            <option value="2">Гарнір</option>
            <option value="3">Напій</option>
            <option value="4">Торт</option>
        </select>
    </div>
    <div class="message-box pd-x-28 error">
        Категорія необхідна
    </div>

    <div class="alert mb-1">
        Успішно збережено
    </div>

    <div class="input-container">
        <button class="btn btn-default" type="submit">Зберегти</button>
        <a class="btn btn-sec" href="#">Додати ще</a>
    </div>
</form>
