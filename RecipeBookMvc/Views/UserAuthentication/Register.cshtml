@model RecipeBookMvc.Models.DTO.RegistrationModel
@inject Microsoft.Extensions.Localization.IStringLocalizer Localizer

<form class="w-40"  asp-action="Register" method="post">
    <h2 class="pb-10">@Localizer["Registration"]</h2>

    <div class="input-container">
        <label class="w-40" asp-for="Name">@Localizer["Name1"]</label>
        <input class="input" asp-for="Name" />
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Name"> </span>
    </div>

    <div class="input-container">
        <label class="w-40"  asp-for="Email">Email</label>
        <input class="input" asp-for="Email" type="email" />
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Email"> </span>
    </div>

    <div class="input-container">
        <label class="w-40" asp-for="Username">@Localizer["User name"]</label>
        <input class="input" asp-for="Username" />
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Username"> </span>
    </div>

    <div class="input-container">
        <label class="w-40" asp-for="Password">@Localizer["Password"]</label>
        <input class="input" asp-for="Password" type="password" />
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Password"> </span>
    </div>

    <div class="input-container">
        <label class="w-40" asp-for="PasswordConfirm">@Localizer["Password confirm"]</label>
        <input class="input" asp-for="PasswordConfirm" type="password" />
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="PasswordConfirm"> </span>
    </div>
    <input type="hidden" asp-for="Role" value="User" />
@*     <div class="input-container">
        <label class="w-40" asp-for="Role">Роль</label>
        <input class="input" asp-for="Role" />
        <span asp-validation-for="Role" class="text-danger"></span>
    </div> *@

    @if (TempData["msg"] != null)
    {
        <div class="alert alert-info">
            @TempData["msg"]
        </div>
    }
    <div class="input-container">
        <button type="submit" class="btn btn-default">@Localizer["Register"]</button>
    </div>
</form>
