@model RecipeBookMvc.Models.Domain.Recipe
@inject Microsoft.Extensions.Localization.IStringLocalizer Localizer
@{
}

<form class="w-40" asp-action="Add" method="post" enctype="multipart/form-data">
    <h2 class="pb-10">@Localizer["Add recipe"]</h2>

    <div class="input-container">
        <label asp-for="Title" class="w-40">@Localizer["The name of the dish"]</label>
        <input type="text" class="input" asp-for="Title">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Title"> </span>
    </div>

    <div class="input-container">
        <label asp-for="ImageFile" class="w-40">@Localizer["Image"]</label>
        <input type="file" placeholder="@Localizer["Image"]" asp-for="ImageFile">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="ImageFile"> </span>
    </div>

    <div class="input-container">
        <label asp-for="Categorys" class="w-40">@Localizer["Categorys"]</label>
        <select asp-items="Model.CategoryList"  class="input" asp-for="Categorys">
            <option value="">@Localizer["Select category"]</option>
        </select>
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Categorys"> </span>
    </div>

    <div class="input-container">
        <label asp-for="Complexity" class="w-40">@Localizer["Complexity"]</label>
        <input type="text" class="input" asp-for="Complexity">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Complexity"> </span>
    </div>


    <div class="input-container">
        <label asp-for="Ingredients" class="w-40">@Localizer["Ingredients"]</label>
        <input type="text" class="input" asp-for="Ingredients">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Ingredients"> </span>
    </div>

    <div class="input-container">
        <label asp-for="Instruction" class="w-40">@Localizer["Process"]</label>
        <input type="text" class="input" asp-for="Instruction">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Instruction"> </span>
    </div>



    @if (TempData["msg"] != null)
    {
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }

    <div class="input-container">
        <button class="btn btn-default" type="submit">@Localizer["Save"]</button>
        <a class="btn btn-sec" href="/Recipe/RecipeList">@Localizer["All recipes"]</a>
    </div>
</form>
